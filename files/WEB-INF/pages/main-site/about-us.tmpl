			return
		}

    // validate company
		if (companyIn.value != "" ) {
      if (companyIn.value.length <= 2) {
				setError(true, companyErr, "karakter harus lebih dari 2");
				processRegBtn.disabled = true
				return
			} else if(companyIn.value.length > 40){

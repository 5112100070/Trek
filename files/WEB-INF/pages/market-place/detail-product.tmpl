<!DOCTYPE html>
<html lang="en">
  {{ template "header.tmpl" .}}

  <body>
    {{ template "main-navigation.tmpl" .}}
    <div class="col-md-12">
      <div class="row">
        <div class="col-lg-12 text-center my-auto bg-dark-grey">
          <h4>Memperkenalkan TrekHome</h4>
          <h6>Tak Perlu Beli Alat Konstruksi Untuk Rumahmu</h6>
          <h6>Cukup Sewa Saja Di TrekHome</h6>
        </div>
      </div>     
    </div>

    <div class="col-md-12">
      <div class="row">
        <div class="col-lg-6">
          <div class="row">
            <div class="col-lg-12">
              <img id="product-img" src="/img/loading.jpg" width="100%" height="100%">
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="row">
            <div class="col-lg-12 text-center" style="margin: 25px 0;">
              <h4 id="product-name"></h4>
            </div>
            <div class="col-lg-12">
              <div id="product-price-to-rent"></div>
            </div>
            
            <!-- <div class="col-lg-12">
              <small style="font-weight:bolder;font-style:italic;"><div id="product-price-to-buy"></div></small>
            </div> -->
            
            <div class="col-lg-12"> <!--Input Data Rent Product -->
              <div class="row">
                <div class="col-lg-4">
                  <div class="row">
                    <div class="col-lg-12 text-center">Sewa Berapa Lama</div>
                    <div class="col-lg-12 text-center">
                      <select>
                        <option>1 Minggu</option>
                        <option>2 Minggu</option>
                        <option>3 Minggu</option>
                        <option>1 Bulan</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4 text-center">
                  <div class="row">
                    <div class="col-lg-12">Mulai Tanggal</div>
                    <div class="col-lg-12">
                      <div class="input-append date form_datetime">
                          <input size="16" type="text" value="" readonly>
                          <span class="add-on"><i class="icon-th"></i></span>
                      </div>         
                    </div>
                  </div>
                </div>
                <div class="col-lg-4 text-center">
                  <div class="row">
                    <div class="col-lg-12 text-center">Jumlah</div>
                    <div class="col-lg-12 text-center">
                      <input class="col-lg-4" type="number" value="1">
                    </div>
                  </div>
                </div> 
              </div>
            </div> <!-- End Of Input Data Rent Product -->
            <div class="col-lg-12" style="margin-top: 2%;">
              <a class="col-lg-12 btn btn-home" target="_blank" href="sewa" >SEWA SEKARANG</a>
            </div>
          </div>
        </div>
      </div>     
    </div>
    
    {{ template  "footer.tmpl" .}}

  <!--End of Tawk.to Script-->
    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/datetime-picker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/vendor/datetime-picker/js/locales/bootstrap-datetimepicker.id.js"></script>
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112381262-1"></script>
    
    <script src="/js/controller/product/detail-product.js"></script>
    <script src="/js/controller/product/product.js"></script>
    <script src="/js/service/product.js"></script>
    {{ template "default-script.tmpl" .}}
    <script>
        var productID = {{.productID}}
        var providerID = {{.providerID}}
    </script>
  </body>

</html>

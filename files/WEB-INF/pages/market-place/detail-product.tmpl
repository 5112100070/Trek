<!DOCTYPE html>
<html lang="en">
  {{ template "header.tmpl" .}}

  <body>
    {{ template "main-navigation.tmpl" .}}
    <div class="col-md-12">
      <div class="row">
        <div class="col-lg-12 text-center my-auto bg-dark-grey">
          <h4>Memperkenalkan TrekHome</h4>
          <h6>Tak Perlu Beli Alat Konstruksi Untuk Rumahmu</h6>
          <h6>Cukup Sewa Saja Di TrekHome</h6>
        </div>
      </div>     
    </div>

    <div class="row" style="margin-bottom: 5%">
      <div class="col-md-12">

      <div class="row"> <!-- row -->
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <img id="product-img" src="/img/loading.jpg" width="100%" height="100%">
        </div>
        <div class="col-lg-4"></div>
      </div> <!-- end of row -->

      <div class="row" style="margin: 0 10%;"> <!-- row -->
        <div class="col-lg-12 text-center">
          <h4 id="product-name"></h4>
          <input id="product-id" style="display: none;">
        </div>
        <div class="col-lg-12 text-center">
              <div id="product-price-to-rent">Harga Sewa: </div>
        </div>
        <div class="col-lg-12 form-group">
          <label for="type-duration">Tipe Duration</label>
          <select id="type-duration" class="form-control">
            <option>Hari</option>
            <option>Minggu</option>
            <option>Bulan</option>
          </select>
        </div>
        <div class="col-lg-12 form-group">
          <label for="duration">Duration</label>
          <input type="number" class="form-control" id="duration" value="1">
        </div>
        <div class="col-lg-12 form-group">
          <label for="total">Jumlah yang dibutuhkan</label>
          <input type="number" class="form-control" id="total" value="1">
        </div>
        <div class="col-lg-12 form-group">
          <label for="start-date">Tanggal Mulai Sewa</label>
          <input id="start-date" class="form-control input-append date form_datetime" size="16" type="text" value="" readonly>
        </div>
        <div class="col-lg-12 form-group">
          <label for="user-email">Email</label>
          <input type="email" class="form-control" id="user-email">
        </div>
        <div class="col-lg-12" style="margin-top: 2%;">
          <a class="col-lg-12 btn btn-home" onClick="javascript:SendRequestQuot()">SEWA SEKARANG</a>
        </div>
      </div> <!-- end of row -->

      </div>
    </div>
    
    {{ template  "footer.tmpl" .}}

  <!--End of Tawk.to Script-->
    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/datetime-picker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/vendor/datetime-picker/js/locales/bootstrap-datetimepicker.id.js"></script>
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112381262-1"></script>
    
    <script src="/js/controller/product/detail-product.js"></script>
    <script src="/js/controller/product/product.js"></script>
    <script src="/js/service/product.js"></script>
    {{ template "default-script.tmpl" .}}
    <script>
        var productID = {{.productID}}
        var providerID = {{.providerID}}
    </script>
  </body>

</html>

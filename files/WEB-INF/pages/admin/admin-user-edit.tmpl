<!DOCTYPE html>
<html lang="en">
  {{ template "header.tmpl" .}}

  <body>
    {{ template "admin-navigation.tmpl" .}}
    <div class="row" style="margin-bottom: 5%">
      <div class="col-md-12">

      <div class="row"> <!-- row -->
        <div class="col-lg-4"></div>
        <div class="col-lg-4 text-center">
          <img id="user-img" src="/img/loading.jpg" width="300px" height="250px">
        </div>
        <div class="col-lg-4"></div>
      </div> <!-- end of row -->      
      <div class="row"> <!-- row -->
            <div class="col-lg-4"></div>
            <input id="user-img-new" class="form-control col-lg-2" type="file" accept="image/*" />
            <button class="btn col-lg-2" onClick="javascript:ProcessUploadImgUser()">SIMPAN GAMBAR</button>
            <div class="col-lg-4"></div>
      </div> <!-- end of row -->

      <div class="row" style="margin: 0 10%;"> <!-- row -->
        <div class="col-lg-12 form-group">
            <label for="fullname">Nama Lengkap</label>
            <input class="form-control" id="fullname" readOnly>
        </div>
        <div class="col-lg-12 form-group">
            <label for="username">Email</label>
            <input type="email" class="form-control" id="username" readOnly>
        </div>
        <div class="col-lg-12 form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" id="password">
        </div>
        <div class="col-lg-12 form-group">
            <div class="row">
                <div class="col-lg-6">
                    <label for="status">Status</label>
                    <select id="status" class="form-control col-lg-12">
                        <option value="1">AKTIF</option>
                        <option value="0">TIDAK AKTIF</option>
                    </select>
                </div>
                <div class="col-lg-6">
                    <label for="type">Tipe Akun</label>
                    <select id="type" class="form-control col-lg-12">
                        <option value="1">User Biasa</option>
                        <option value="0">ADMIN</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-12 form-group">
            <label>Tanggal Pembuatan</label>
            <input class="form-control" id="create-time" disabled>
        </div>
        <div class="col-lg-12 form-group">
            <label>Terakhir kali di update</label>
            <input class="form-control" id="update-time" disabled>
        </div>

        <div class="col-lg-12" style="margin-top: 2%;">
            <div class="row">
                <a class="col-lg-6 btn btn-trek" onClick="javascript:GoToIndex('admin/user')">KEMBALI</a>
                <a class="col-lg-6 btn btn-home" onClick="javascript:ProcessUpdateUser()">UPDATE</a>
            </div>
        </div>
        <h6 style="font-style:italic; text-align:left;">*Kosongkan untuk bagian yang tak ingin di edit</h6>
      </div> <!-- end of row -->

      </div>
    </div>

    <div id="request-alert-div" class="alert alert-danger" style="display:none;">
      <strong>Terjadi kesalahan,</strong> <p id="request-alert">
    </div>
    
    {{ template  "footer.tmpl" .}}

  <!--End of Tawk.to Script-->
    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/datetime-picker/js/moment-with-locales.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendor/datetime-picker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>  
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112381262-1"></script>
    
    <script src="/js/controller/admin/detail-user.js"></script>
    <script src="/js/controller/admin/user.js"></script>
    {{ template "default-script.tmpl" .}}
    <script>
        $(document).ready(function(){
            var url = new URL(window.location.href);
            loadUserDetailByID(url.searchParams.get("user-id"));
        });
    </script>
  </body>

</html>
